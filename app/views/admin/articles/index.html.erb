<section>
  <div class="container-fluid">
    <div class="row mt-5 mb-5">
      <div class="col-xl-10 col-lg-9 col-md-8 ml-auto">
            <table class="table table-bordered ">
              <thead class="thead-dark">
                <tr>
                  <th scope="col">ID</th>
                  <th scope="col">TITLE</th>
                  <th scope="col">CONTENT</th>
                  <th scope="col">FOTO</th>
                  <th scope="col">STATUS</th>
                  <th scope="col">ACTION</th>
                </tr>
              </thead>
              <tbody>
                <% @articles.each do |article| %>
                  <tr>
                    <th scope="row"><%= article.id %></th>
                    <td><%= article.title %></td>
                    <td><%= article.body %></td>
                    <td><!-- article.foto --></td>
                    <td><%= (articles.status==0?"Headline":"Subheadline") %></td>
                    <td>
                      <button type="button" class="btn btn-outline-primary">Headline</button>
                      <button type="button" class="btn btn-outline-secondary">Subheadline</button>
                      <a class="btn btn-success" href="/admin/articles/<%= article.id %>/edit" role="button">
                        <%= link_to "Edit", edit_admin_articles_path(article.id) %>
                      </a>
                      <button type="button" class="btn btn-danger" href="/admin/articles/<%= article.id %>">
                        <%= link_to "Delete",admin_articles_path(article.id),method: :delete ,:data => {:confirm => 'Yakin ingin menghapus?'} %>
                      </button>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
</section>

